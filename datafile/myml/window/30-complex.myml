<relation>
#3dworld depends on inner objects
(3dworld, sky, act, bg) -> (texball, p1, act, 0)
(3dworld, gnd, act, bg) -> (terrain, p2, act, 0)
(3dworld, rabb, act, bg) -> (rabbit, p3, act, 0)
(3dworld, rtsgeom, act, cam) -> (rtscam, rtsmodl, act, geom)
(3dworld, orthgeom, act, cam) -> (orthcam, orthmodl, act, geom)
(3dworld, freegeom, act, cam) -> (freecam, freemodl, act, geom)
(3dworld, vrgeom, act, cam) -> (vrcam, vrmodl, act, geom)

#uiworld depends on inner objects
(uiworld, 0, act, aid) -> (geomhelper, 0, act, 0)
(uiworld, 0, act, aid) -> (fonthelper, 0, act, 0)
(uiworld, ovv, act, ui) -> (overview, p4, act, 0)
(uiworld, sty5, act, ui) -> (vjoy, p5, act, 0)
(uiworld, sty6, act, ui) -> (vkbd, p6, act, 0)
(uiworld, sty7, act, ui) -> (corner, p7, act, 0)
(uiworld, sty8, act, ui) -> (pointer, p8, act, 0)
(uiworld, uigeom, act, cam) -> (uicam, uimodl, act, geom)

#context depends on scene
(glctx3d, 0, act, 0) -> (3dworld, 0, act, 0)
(glctxui, 0, act, 0) -> (uiworld, 0, act, 0)

#viewport depends on ctx + cam
(glviewbg, 0, act, 0) -> (glctx3d, 0, act, 0)
(glviewbg, rtsrect, act, cam) -> (rtscam, rtsfrus, act, cam)
(glviewbg, orthrect,act, cam) -> (orthcam, orthfrus, act, cam)
(glviewbg, freerect, act, cam) -> (freecam, freefrus, act, cam)
(glviewbg, vrrect, act, cam) -> (vrcam, vrfrus, act, cam)

(glviewfg, 0, act, 0) -> (glctxui, 0, act, 0)
(glviewfg, uirect, act, 0) -> (uicam, uifrus, act, 0)

#window depends on glview
(glwnd, 0, act, 0) -> (glviewbg, 0, act, 0)
(glwnd, 0, act, 0) -> (glviewfg, 0, act, 0)

#opengl depends on worldcontexts + rendertargets
(opengl, 0, win, 0) -> (glctx3d, 0, act, 0)
(opengl, 0, win, 0) -> (glctxui, 0, act, 0)
(opengl, 0, win, 0) -> (glwnd, 0, act, 0)
</relation>
