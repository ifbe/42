<relation>
#3dworld depends on inner objects
(3dworld, skygeom, act, 0) -> (texball, skyhaha, act, 0)
(3dworld, freegeom, act, 0) -> (freecam, freemodl, act, 0)

#uiworld depends on inner objects
(uiworld, area, act, 0) -> (login, 0, act, 0)
(uiworld, orthgeom, act, 0) -> (orthcam, orthmodl, act, 0)

#glctx depends on scene
(ctx000, 0, act, 0) -> (3dworld, 0, act, 0)
(ctx111, 0, act, 0) -> (uiworld, 0, act, 0)

#glview depends on ctx + cam
(view00, 0, act, 0) -> (ctx000, 0, act, 0)
(view00, freerect, act, 0) -> (freecam, freefrus, act, 0)

#glview depends on ctx + cam
(view11, 0, act, 0) -> (ctx111, 0, act, 0)
(view11, orthrect, act, 0) -> (orthcam, orthfrus, act, 0)

#glwnd depends on view
(thewnd, 0, act, 0) -> (view00, 0, act, 0)
(thewnd, 0, act, 0) -> (view11, 0, act, 0)

#opengl depends on ctx + wnd
(opengl, 0, win, ctx) -> (ctx000, 0, act, 0)
(opengl, 0, win, ctx) -> (ctx111, 0, act, 0)
(opengl, 0, win, wnd) -> (thewnd, 0, act, 0)

</relation>
