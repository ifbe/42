<device>
gpio{
fmt:gpio
arg:/dev/gpiomem
}
i2chost{
fmt:i2c
arg:/dev/i2c-1
}
</device>


<driver>
ads1115{
fmt:ads1115
}
l298n{
fmt:l298n
}
</driver>


<system>
tcpsrv{
fmt:TCP
arg:``:10000
}
vserver{
fmt:TCP
arg:``:9999
}
</system>


<artery>
goslow{
fmt:goslow
}
dbghex{
fmt:dbghex
}
vehicle{
fmt:Vehicle
lf:13,5,6
lb:26,12,16
rf:22,17,27
rb:4,14,15
}
</artery>


<supply>
usbcam{
fmt:cam
#format:pBAA
width:640
height:480
}
</supply>


<relation>
(@i2chost, dst@0) -> (@ads1115, i2c@0)
(@gpio, dst@0) -> (@l298n, gpio@0)

(@l298n, dst@0) -> (@vehicle, drv@0)
(@ads1115, dst@0) -> (@vehicle, volt@0)
(@tcpsrv, dst@0) -> (@vehicle, sock@0)

(usbcam, 0, dst) -> (goslow, 0, src)
(goslow, 0, dst) -> (vserver, 0, src)
(usbcam, 0, dst) -> (dbghex, 0, src)
</relation>
