<entity>
canvas{
fmt:video
outfmt:rgba
}
</entity>


<supply>
usbcam{
fmt:cam
format:BG10
width:1920
height:1080
url:/dev/video0
}
wnd{
fmt:wnd
}
</supply>


<artery>
convert{
fmt:picfmt
srcfmt:bg10
srcw:1920
srch:1080
dstfmt:rgbx
dstw:640
dsth:480
}
</artery>


<style>
where{
c:256,256,0
r:256,0,0
f:0,256,0
}
</style>


<relation>
(usbcam, 0, dst) -> (convert, 0, src)
(convert, 0, dst) -> (canvas, 0, rgb)

(wnd, where, 0) -> (canvas, 0, 0)
</relation>
