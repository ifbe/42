<entity>
canvas{
fmt:video
format:yuvx
}
</entity>


<supply>
usbcam{
fmt:cam
arg:/dev/video0
}
wnd{
fmt:wnd
}
</supply>


<artery>
convert{
fmt:picfmt
srcfmt:yuyv
srcw:640
srch:480
dstfmt:yuvx
dstw:640
dsth:480
}
</artery>


<style>
where{
c:256,256,0
r:256,0,0
f:0,256,0
}
</style>


<relation>
(usbcam, 0, dst) -> (convert, 0, src)
(convert, 0, dst) -> (canvas, 0, yuv)

(wnd, where, 0) -> (canvas, 0, 0)
</relation>
