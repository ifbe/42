<relation>
#mirror depends on glfbo
(mirror, 0, 0) -> (glfbo, 0, 0)

#world depends on tree
(world, skygeom, 0) -> (sky, skypart, 0)
(world, drongeom, 0) -> (drone, dronpart, 0)
(world, aaaageom, 0) -> (cam0, aaaapart, 0)
(world, bbbbgeom, 0) -> (cam1, bbbbpart, 0)
(world, mirrgeom, 0) -> (mirror, mirrpart, 0)

#gldata depends on world
(gldata, 0, a0) -> (cam0, 0, 0)
(gldata, 0, a1) -> (cam1, 0, 0)
(gldata, 0, a2) -> (mirror, 0, 0)

#glwnd depends on gldata
(glwnd, aaaarect, 0) -> (gldata, 0, a0)
(glwnd, bbbbrect, 0) -> (gldata, 0, a1)
(glfbo, mirrrect, 0) -> (gldata, 0, a2)

#opengl depends on glwnd
(opengl, 0, wnd) -> (glwnd, 0, togl)

#gamepad
(gamepad, 0, dst) -> (opengl, 0, 0)
</relation>
