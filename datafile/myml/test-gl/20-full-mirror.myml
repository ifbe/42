<relation>
#mirror depends on glfbo
(mirror, 0, act, 0) -> (glfbo, 0, win, 0)

#world depends on tree
(world, skygeom, act, 0) -> (sky, skypart, act, 0)
(world, drongeom, act, 0) -> (drone, dronpart, act, 0)
(world, aaaageom, act, 0) -> (cam0, aaaapart, act, 0)
(world, bbbbgeom, act, 0) -> (cam1, bbbbpart, act, 0)
(world, mirrgeom, act, 0) -> (mirror, mirrpart, act, 0)

#gldata depends on world
(gldata, 0, act, a0) -> (cam0, 0, act, 0)
(gldata, 0, act, a1) -> (cam1, 0, act, 0)
(gldata, 0, act, a2) -> (mirror, 0, act, 0)

#glwnd depends on gldata
(glwnd, aaaarect, win, 0) -> (gldata, 0, act, a0)
(glwnd, bbbbrect, win, 0) -> (gldata, 0, act, a1)
(glfbo, mirrrect, win, 0) -> (gldata, 0, act, a2)

#opengl depends on glwnd
(opengl, 0, win, wnd) -> (glwnd, 0, win, togl)
</relation>
