<system>
file{
fmt:FILE
arg:test.flv
}
</system>


<artery>
picfmt{
fmt:picfmt
zerocopy:1
srcfmt:pBAA
srcw:640
srch:480
dstfmt:y4,u,v
dstw:640
dsth:480
}
flv{
fmt:Flv
}
</artery>


<supply>
usbcam{
fmt:cam
#format:pBAA
width:640
height:480
}
codec{
fmt:enc
}
</supply>


<relation>
(usbcam, 0, dst) -> (picfmt, 0, src)
(picfmt, 0, dst) -> (codec, 0, img)
(codec, 0, bs) -> (flv, 0, src)
(flv, 0, dst) -> (file, 0, src)
</relation>
