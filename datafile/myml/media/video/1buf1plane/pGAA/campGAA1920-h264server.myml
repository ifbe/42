<system>
vserver{
fmt:TCP
arg:``:9999
}
</system>


<artery>
picfmt{
fmt:picfmt
zerocopy:1
srcfmt:pGAA
srcw:1920
srch:1080
dstfmt:y4,u,v
dstw:1920
dsth:1088
}
</artery>


<supply>
usbcam{
fmt:cam
#format:pGAA
width:1920
height:1080
}
codec{
fmt:enc
width:1920
height:1088
}
</supply>


<relation>
(usbcam, 0, dst) -> (picfmt, 0, src)
(picfmt, 0, dst) -> (codec, 0, img)
(codec, 0, bs) -> (vserver, 0, src)
</relation>
